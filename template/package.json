{
  "name": "{{ name }}",
  "version": "{{ version }}",
  "description": "{{ description }}",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/.../*.git"
  },
  "author": "{{ author }}",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/.../.../issues"
  },
  "homepage": "https://github.com/.../...#readme",
  "scripts": {
    "dev": "vue-cli-service serve --api=local",
    "dev-build": "vue-cli-service build --api=dev",
    "pre-build": "yarn install && vue-cli-service build --api=pre",
    "prod-build": "yarn install && vue-cli-service build --api=prod",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "element-ui": "^2.4.2",
    "register-service-worker": "^1.0.0",
    "store": "^2.0.12",
    "vue": "^2.5.16",
    "vue-router": "^3.0.1"{{#if_eq state 'vuex'}},
    "vuex": "^3.0.1"
    {{/if_eq}}
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-rc.5",
    "@vue/cli-plugin-eslint": "^3.0.0-rc.5",
    "@vue/cli-plugin-pwa": "^3.0.0-rc.5",
    "@vue/cli-service": "^3.0.0-rc.5",
    "@vue/eslint-config-prettier": "^3.0.0-rc.5",
    "babel-plugin-component": "^1.1.1",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.2.0",
    "vue-template-compiler": "^2.5.16"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
